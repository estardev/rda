{% extends '::base.html.twig' %}

{% block body -%}
    <div class="panel panel-default" xmlns="http://www.w3.org/1999/html">
        <div class="panel-heading"><h4>Lista Documenti da allegare</h4></div>

        <table class="table">
            <thead>
            <tr>
                <th>Nome</th>
                <th>Descrizione</th>
                <th>Id</th>
                <th>Azioni</th>
            </tr>
            </thead>
            <tbody>
            {% for documento in entities %}
                {% set entity = documento.documento %}
                {% set upload = documento.upload %}
                {% set alert = documento.alert %}
                <tr>
                    <td><a href="{{ path('documento_show', { 'id': entity.id }) }}">{{ entity.nome }}</a></td>
                    <td>{{ entity.descrizione }}</td>
                    <td>{{ entity.id }}</td>
                    <td>


                            {% if upload==true %}

                                <form class="form" method="post" enctype="multipart/form-data"

                                      action="{{ path('richiestadocumento_upload', { 'idRichiesta': idRichiesta ,'idDocumento': entity.id}) }}">

                                    {% if valida %}
                                    <input placeholder="Clicca qui" readonly
                                           style="cursor: auto; background-color: white; "
                                           onclick="$('#docfile{{ entity.id }}').click();" type="text"
                                           name="subfile{{ entity.id }}" id="subfile{{ entity.id }}"
                                           class="form-control" style="display: inline;width:50%"
                                           {% if alert==false %}value="{{ (vich_uploader_asset(documento.rd, 'docFile')) }}"{% endif %}/>
                                    {% else %}
                                        <input placeholder="Clicca qui" readonly
                                               style="cursor: auto; background-color: white; "
                                               onclick="return false;" type="text"
                                               name="subfile{{ entity.id }}" id="subfile{{ entity.id }}"
                                               class="form-control"  style="display: inline;width:50%" disabled="disabled"
                                               {% if alert==false %}value="{{ (vich_uploader_asset(documento.rd, 'docFile')) }}"{% endif %}/>
                                    {% endif %}

                                    <input disabled type="submit" id="subfilebutton{{ entity.id }}" class="btn btn-default">
                                         </input>
                                    <input type="file" name="docfile" class="form-control "
                                           style="visibility:hidden;" id="docfile{{ entity.id }}"/>
                                    <script>
                                        $('#docfile{{ entity.id }}').change(function () {
                                            $('#subfilebutton{{ entity.id }}').prop('disabled', false);
                                            if ($(this).val() == '') {
                                                $('#subfilebutton{{ entity.id }}').prop('disabled', true);
                                            }
                                            var path = $(this).val();
                                            var file = path.replace("C:\\fakepath\\", "");
                                            $subfile = $('#subfile{{ entity.id }}');
                                            $subfile.val(file)
                                                    .html(file)
                                                    .text(file);
                                        });

                                    </script>


                                    {# in caso di documento giï¿½ presente deve essere presente l'upload con il pulsante "sostituisci"#}

                                </form>
                                {% if alert==false %}
                                    <form method="get">
                                       <a class="btn btn-default"
                                                    {#questa istruzione in produzione va commentata e va usata la successiva "questione di path"#}
                                                    {#href="{{ app.request.basePath }}/{{ (vich_uploader_asset(documento.rd, 'docFile')) }}"#}
                                                    href="{{ (vich_uploader_asset(documento.rd, 'docFile')) }}"
                                                    download
                                            > <span
                                                   class="glyphicon glyphicon-download"
                                                   aria-hidden="true"></span> Scarica</a>


                                    </form>



                                {% endif %}
                            {% else %}
                            <div class="btn-group">
                                <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Seleziona Azione <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                {% if alert==false %}


                                    <li><a href="{{ path('richiestadocumento_show', { 'idCategoria': idCategoria, 'idRichiesta': idRichiesta ,'idDocumento': entity.id}) }}">
                                            <span
                                                    class="glyphicon glyphicon-eye-open"
                                                    aria-hidden="true"></span> Visualizza</a></li>
                                        {#  sistemare questa documento_show in richiestadocumento_show (idcategoria, idrichiesta, iddocumento#}
                                {% endif %}
                                    {% if valida %}
                                <li><a href="{{ path('richiestadocumento_edit', { 'idCategoria': idCategoria, 'idRichiesta': idRichiesta ,'idDocumento': entity.id}) }}">
                                        <span class="glyphicon glyphicon-pencil"
                                              aria-hidden="true"></span> Modifica/Crea</a></li>
                                    {% endif %}
                                {% if alert==false %}
                                    <li>
                                    <a target="_blank"
                                                 href="{{ path('richiestadocumento_print', { 'idCategoria': idCategoria, 'idRichiesta': idRichiesta ,'idDocumento': entity.id  }) }}">
                                            <span class="glyphicon glyphicon-file"
                                                  aria-hidden="true"></span> Genera PDF</a></li>
                                {% endif %}
</ul>
                            {% endif %}
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>


    </div>

    <div class="bottoniera">
    <a class="btn btn-default" href="{{ path('richiesta_bycategoria', { 'idCategoria': idCategoria}) }}"> Indietro alla Lista</a></button>
    </div>
        {% endblock %}
