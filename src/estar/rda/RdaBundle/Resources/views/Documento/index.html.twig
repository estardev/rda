{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Documento list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Iddocumento</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('documento_show', { 'id': entity.iddocumento }) }}">{{ entity.nome }}</a></td>
                <td>{{ entity.iddocumento }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('documento_show', { 'id': entity.iddocumento }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('documento_edit', { 'id': entity.iddocumento }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('documento_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
