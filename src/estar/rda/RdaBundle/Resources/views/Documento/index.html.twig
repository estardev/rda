{% extends '::base.html.twig' %}

{% block body -%}
    <div class="panel panel-default" xmlns="http://www.w3.org/1999/html">
        <div class="panel-heading"><h4>Lista Documenti da allegare</h4></div>

        <table class="table">
            <thead>
            <tr>
                <th>Nome</th>
                <th>Descrizione</th>
                <th>Id</th>
                <th>Azioni</th>
            </tr>
            </thead>
            <tbody>
            {% for documento in entities %}
                {% set entity = documento.documento %}
                {% set upload = documento.upload %}
                {% set alert = documento.alert %}
                <tr>
                    <td><a href="{{ path('documento_show', { 'id': entity.id }) }}">{{ entity.nome }}</a></td>
                    <td>{{ entity.descrizione }}</td>
                    <td>{{ entity.id }}</td>
                    <td>
                        <div class="btn-group" role="group">

                            {% if upload==true %}
                                {% if alert==true %}
                                    <form class="form" method="post" enctype="multipart/form-data"

                                          action="{{ path('richiestadocumento_upload', { 'idRichiesta': idRichiesta ,'idDocumento': entity.id}) }}">
                                        <input type="file" name="docfile">


                                        {#<img src="{{ vich_uploader_asset(product, 'image') }}" alt="{{ product.name }}" />#}
                                        <button type="submit" class="btn btn-default"><span
                                                    class="glyphicon glyphicon-pencil"
                                                    aria-hidden="true"></span><a
                                                    > Upload</a>
                                        </button>
                                        {# TODO in caso di documento già presente deve essere presente l'upload con il pulsante "sostituisci"#}

                                    </form>
                                {% else %}
                                    <form method="get">
                                        <button type="submit" class="btn btn-default"
                                                ><span
                                                    class="glyphicon glyphicon-download"
                                                    aria-hidden="true"></span><a
                                                    href="{{ app.request.basePath }}/{{ (vich_uploader_asset(rd, 'docFile')) }}"
                                                    download
                                                    > Scarica</a>
                                        </button>

                                    </form>



                                {% endif %}
                            {% else %}
                                {% if alert==false %}
                                <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-eye-open"
                                                                                    aria-hidden="true"></span><a
                                            href="{{ path('documento_show', { 'id': entity.id }) }}"> Visualizza</a>
                                    {# TODO sistemare questa documento_show in richiestadocumento_show (idcategoria, idrichiesta, iddocumento#}
                                </button>
                                {% endif %}
                                <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil"
                                                                                    aria-hidden="true"></span><a
                                            href="{{ path('richiestadocumento_edit', { 'idCategoria': idCategoria, 'idRichiesta': idRichiesta ,'idDocumento': entity.id}) }}">
                                        Modifica/Crea</a>
                                </button>

                            {% endif %}
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
