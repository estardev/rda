{% extends '::base.html.twig' %}

{% block body -%}
<div class="panel panel-default">
    <div class="panel-heading"><h4>Lista Associazioni Categoria-Documento</h4></div>

    <table class="table">
        <thead>
            <tr>
                <th>Elemento necessario per ABS</th>
                <th>Id</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('categoriadocumento_show', { 'id': entity.id }) }}">{{ entity.necessarioperabs }}</a></td>
                <td>{{ entity.id }}</td>
                <td>
                    <div class="btn-group">
                        <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Seleziona Azione <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('categoriadocumento_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Visualizza</a></li>
                        <li><a href="{{ path('categoriadocumento_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Modifica</a></li>
</ul>
                    </div>
                </td>
            </tr>

        {% endfor %}
        </tbody>
    </table>
</div>
    {% endblock %}

