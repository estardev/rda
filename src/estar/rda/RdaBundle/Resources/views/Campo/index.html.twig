{% extends '::base.html.twig' %}

{% block body -%}
 <div class="panel panel-default">
     <div class="panel-heading"><h4>Lista Campi form</h4></div>
    <table class="table">
        <thead>
            <tr>
               
                <th>Descrizione</th>
                <th>Tipo</th>
                <th>Ordinamento</th>
                <th>Fieldset</th>
                <th>Ordinamento fieldset</th>
                <th>Id</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
               
                <td><a href="{{ path('campo_show', { 'id': entity.id }) }}">{{ entity.descrizione }}</td>
                <td>{{ entity.tipo }}</td>
               
                <td>{{ entity.ordinamento }}</td>
                <td>{{ entity.fieldset }}</td>
                <td>{{ entity.ordinamentofieldset }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <div class="btn-group" role="group">
  					<button type="button" class="btn btn-default"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span><a href="{{ path('campo_show', { 'id': entity.id }) }}"> Visualizza</a></button>
					<button type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><a href="{{ path('campo_edit', { 'id': entity.id }) }}"> Modifica</a></button>
					
				</div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
	</div>
    {% endblock %}



