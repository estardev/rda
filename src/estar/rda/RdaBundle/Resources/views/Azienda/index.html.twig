{% extends '::base.html.twig' %}

{% block body -%}
<div class="panel panel-default">
     <div class="panel-heading"><h4>Lista Aziende</h4></div>

    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Id</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('azienda_show', { 'id': entity.id }) }}">{{ entity.nome }}</a></td>
                <td>{{ entity.id }}</td>
                <td>
                    <div class="btn-group">
                        <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Seleziona Azione <span class="caret"></span>
                        </button>
                    <ul class="dropdown-menu">
  					<li><a href="{{ path('azienda_show', { 'id': entity.id }) }}"> <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Visualizza</a></li>
					<li><a href="{{ path('azienda_edit', { 'id': entity.id }) }}"> <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Modifica</a></li>
					</ul>
				</div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
	</div>
        
    {% endblock %}
