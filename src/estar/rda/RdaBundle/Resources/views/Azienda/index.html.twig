                <td>{{ entity.idazienda }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('azienda_show', { 'id': entity.idazienda }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('azienda_edit', { 'id': entity.idazienda }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('azienda_new') }}">
