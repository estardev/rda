            <tr>
                <th>Nome</th>
                <th>Descrizione</th>
                <th>Idgruppo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('gruppoutente_show', { 'id': entity.idgruppo }) }}">{{ entity.nome }}</a></td>
                <td>{{ entity.descrizione }}</td>
                <td>{{ entity.idgruppo }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('gruppoutente_show', { 'id': entity.idgruppo }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('gruppoutente_edit', { 'id': entity.idgruppo }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('gruppoutente_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
