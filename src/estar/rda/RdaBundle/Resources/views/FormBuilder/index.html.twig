{% extends '::base.html.twig' %}

{% block body -%}
<div class="panel panel-default">
    <div class="panel-heading"><h4>Elenco dei Campi della Categoria</h4></div>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Campo</th>
                <th>Tipo</th>
                <th>Valori</th>
                <th>Descrizione</th>
                <th>Padre</th>
                <th>Figlio</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.ordinamento }}</td>
                <td>{{ entity.idnome }}</td>
                <td>{{ entity.tipo }}</td>
                <td>{{ entity.fieldset|replace({"||": " "}) }}</td>
                <td>{{ entity.descrizione|slice( 0, 30) }}...</td>
                <td>{{ entity.campopadre }} - {{ entity.padre }}</td>
                <td>{% for campofiglio in entity.campifiglio %}
                        {{ campofiglio.idnome }}
                    {% endfor %}
                </td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            Seleziona Azione
                            <span class="caret"></span>
                        </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                    {% if (entity.tipo=='choice')  %}
                    <li>
                        <a href="{{ path('formbuilder_setValori', { 'idCategoria': entity.idcategoria.id, 'idCampo': entity.id }) }}">Imposta Valori</a>
                    </li>
                    {% endif %}

                    {% if not(entity.tipo=='choice')  %}
                    <li>
                        <a href="{{ path('formbuilder_setPadre', { 'idCategoria': entity.idcategoria.id, 'idCampo': entity.id }) }}">Imposta Padre</a>
                    </li>
                    {% endif %}

                    {% if not(entity.tipo=='choice')  %}
                    <li>
                        <a href="{{ path('formbuilder_setCondizioni', { 'idCategoria': entity.idcategoria.id, 'idCampo': entity.id }) }}">Imposta Condizioni</a>
                    </li>
                    {% endif %}

                    <li>
                        <a href="{{ path('formbuilder_spostaGiu', { 'idCategoria': entity.idcategoria.id, 'idCampo': entity.id }) }}">Sposta Giu</a>
                    </li>
                    <li>
                        <a href="{{ path('formbuilder_spostaSu', { 'idCategoria': entity.idcategoria.id, 'idCampo': entity.id }) }}">Sposta Su</a>
                    </li>


                    <li>
                        <a href="{{ path('formbuilder_elimina', { 'idCategoria': entity.idcategoria.id, 'idCampo': entity.id }) }}">Elimina</a>
                    </li>
                        </ul>
                    </div>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('formbuilder_nuovo', { 'idCategoria': idcategoria})}}">
                Crea nuovo Campo
            </a>
        </li>
    </ul>
</div>
    {% endblock %}
