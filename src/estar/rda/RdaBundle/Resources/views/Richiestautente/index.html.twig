{% extends '::base.html.twig' %}

{% block body -%}
<div class="panel panel-default">
    <div class="panel-heading"><h4>Lista Associazioni Richiesta-Utente</h4></div>

    <table class="table">
        <thead>
            <tr>
                <th>Creatore</th>
                <th>Validatoretecnico</th>
                <th>Validatoreamministrativo</th>
                <th>Referenteabs</th>
                <th>Id</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('richiestautente_show', { 'id': entity.id }) }}">{{ entity.creatore }}</a></td>
                <td>{{ entity.validatoretecnico }}</td>
                <td>{{ entity.validatoreamministrativo }}</td>
                <td>{{ entity.referenteabs }}</td>
                <td>{{ entity.id }}</td>
                <td>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span><a href="{{ path('richiestautente_show', { 'id': entity.id }) }}"> Visualizza</a></button>
                        <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><a href="{{ path('richiestautente_edit', { 'id': entity.id }) }}"> Modifica</a></button>

                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    {% endblock %}

