{% extends '::base.html.twig' %}

{% block body -%}
<div class="panel panel-default">
    <div class="panel-heading"><h4>Permessi dei Gruppi sulle Categorie</h4></div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Abilitato inserimento richieste</th>
                <th>Validatore tecnico</th>
                <th>Validatore amministrativo</th>
                <th>Referente abs</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td><a href="{{ path('categoriagruppo_show', { 'id': entity.id }) }}">{{ entity.abilitatoinserimentorichieste }}</a></td>
                <td>{{ entity.validatoretecnico }}</td>
                <td>{{ entity.validatoreamministrativo }}</td>
                <td>{{ entity.referenteabs }}</td>

                <td>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span><a href="{{ path('categoriagruppo_show', { 'id': entity.id }) }}"> Visualizza</a></button>
                        <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><a href="{{ path('categoriagruppo_edit', { 'id': entity.id }) }}"> Modifica</a></button>

                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

    {% endblock %}

