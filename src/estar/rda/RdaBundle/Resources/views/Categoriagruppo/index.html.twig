{% extends '::base.html.twig' %}

    {% block javascripts %}
<script type="text/javascript">
    $(document).ready(function(){
        $('#homepageSelectBtnCategoria').prop('disabled',true);
        $('#homepageMostraTutte').prop('disabled',true);
        $('#homepageSelectCategoria').val('defaultDisabledNavbarOption');
    });
</script>
{{parent()}}
{% endblock %}

{% block body -%}
<div class="panel panel-default">
    <div class="panel-heading"><h4>Permessi dei Gruppi sulle Categorie</h4></div>

    <table class="table">
        <thead>
            <tr>
                <th>Categoria</th>
                <th>Gruppo</th>
                <th>Abilitato Inserimento</th>
                <th>Validatore Tecnico</th>
                <th>Validatore Amm. </th>
                <th>Sola lettura </th>
                <th>Referente ESTAR</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><b>{{ entity.idcategoria.nome }}</b><br><i>{{ entity.idcategoria.descrizione }}</i></td>
                <td><b>{{ entity.idgruppoutente.nome }}</b><br><i>{{ entity.idgruppoutente.descrizione }}</i></td>
                <td>{% if entity.abilitatoinserimentorichieste %} Si {% else %} No {% endif %}</td>
                <td>{% if entity.validatoretecnico %} Si {% else %} No {% endif %}</td>
                <td>{% if entity.validatoreamministrativo %} Si {% else %} No {% endif %}</td>
                <td>{% if entity.readonly %} Si {% else %} No {% endif %}</td>
                <td>{% if entity.referenteabs %} Si {% else %} No {% endif %}</td>


                <td>
                    <div class="btn-group">
                        <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Seleziona Azione <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('categoriagruppo_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Visualizza</a></li>
                            <li><a href="{{ path('categoriagruppo_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Modifica</a></li>
                        </ul>
                    </div>

                    {#
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span><a href="{{ path('categoriagruppo_show', { 'id': entity.id }) }}"> Visualizza</a></button>
                        <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><a href="{{ path('categoriagruppo_edit', { 'id': entity.id }) }}"> Modifica</a></button>
                    </div>
                    #}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

    {% endblock %}

