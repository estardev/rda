{% extends '::base.html.twig' %}

  {% block javascripts %}

<script type="text/javascript">
    $(document).ready(function(){
        $('#homepageSelectBtnCategoria').prop('disabled',true);
        $('#homepageMostraTutte').prop('disabled',true);
        $('#homepageSelectCategoria').val('defaultDisabledNavbarOption');
    });
</script>
      {{parent()}}
{% endblock %}

{% block body -%}
<div class="panel panel-default">
    <div class="panel-heading"><h4>Elenco utenti configurati nel sistema</h4></div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome e Cognome</th>
                <th>Utentecartaoperatore</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.nomecognome }}</td>
                <td>{{ entity.utentecartaoperatore }}</td>

                <td>
                    <div class="btn-group">
                        <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Seleziona Azione <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('fos_user_profile_edit', { 'idUtente': entity.id }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Modifica</a></li>
                            <li><a href="{{ path('changePasswordFixed', { 'idUtente': entity.id }) }}"><span class="glyphicon glyphicon-certificate" aria-hidden="true"></span> Reimposta password</a></li>
                            </ul>
                        </div>
                    {#
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><a href="{{ path('fos_user_profile_edit', { 'idUtente': entity.id }) }}">Modifica</a></button>
                        <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-certificate" aria-hidden="true"></span><a href="{{ path('changePasswordFixed', { 'idUtente': entity.id }) }}">Reimposta password</a></button>
                </div>
                    #}

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
    {% endblock %}
