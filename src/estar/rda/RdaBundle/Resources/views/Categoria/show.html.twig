{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Categoria</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Nome</th>
                <td>{{ entity.nome }}</td>
            </tr>
            <tr>
                <th>Descrizione</th>
                <td>{{ entity.descrizione }}</td>
            </tr>
            <tr>
                <th>Idcategoria</th>
                <td>{{ entity.idcategoria }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('categoria') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('categoria_edit', { 'id': entity.idcategoria }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
