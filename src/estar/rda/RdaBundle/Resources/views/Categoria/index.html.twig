{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Categoria list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Descrizione</th>
                <th>Idcategoria</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('categoria_show', { 'id': entity.idcategoria }) }}">{{ entity.nome }}</a></td>
                <td>{{ entity.descrizione }}</td>
                <td>{{ entity.idcategoria }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('categoria_show', { 'id': entity.idcategoria }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('categoria_edit', { 'id': entity.idcategoria }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('categoria_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
