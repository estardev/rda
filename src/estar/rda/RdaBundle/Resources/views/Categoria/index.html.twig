{% extends '::base.html.twig' %}

{% block body -%}
<div class="panel panel-default">
    <div class="panel-heading"><h4>Lista Categorie</h4></div>

       <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Descrizione</th>
                <th>Gruppo GESTAV</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('categoria_show', { 'id': entity.id }) }}">{{ entity.nome }}</a></td>
                <td>{{ entity.descrizione }}</td>
                <td>{{ entity.gruppogestav }}</td>
                <td>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span><a href="{{ path('categoria_show', { 'id': entity.id }) }}"> Visualizza</a></button>
                        <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><a href="{{ path('categoria_edit', { 'id': entity.id }) }}"> Modifica Campi</a></button>
                        <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><a href="{{ path('categoria_edittestata', { 'id': entity.id }) }}"> Modifica Testata</a></button>
                        <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span><a href="{{ path('categoriadocumento_byCategoria', { 'idCategoria': entity.id }) }}"> Gestisci Documenti</a></button>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    {% endblock %}
    

