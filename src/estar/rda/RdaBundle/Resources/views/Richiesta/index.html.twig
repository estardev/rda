            $(document).on("change", "#selectRichiestaLavorazione", function () {
                var selectedSidebarLavorazione = $(this).val();
                $('#tableListaRichieste').html('<br><p>&nbsp;&nbsp;&nbsp;In Caricamento...</p><br>');

                $.ajax({
                    type: "POST",
                    url: Routing.generate('setListaRichiesteFromSidebar'),
                    data: {selectedSidebarLavorazione: selectedSidebarLavorazione},
                    success: function(data)
                    {
                        $('#tableListaRichieste').html(data);
                    }
                });
            });

            $(document).on("keyup", "#searchRichiesta", function () {
                var filter = $(this).val();
                var regExPattern = "gi";
                var regEx = new RegExp(filter, regExPattern);
                $("#tableListaRichieste tr").each(function () {
                    if($(this).data('state'))
                        if (
                                $(this).text().search(new RegExp(filter, "i")) < 0
                                && $(this).data('state').search(regEx) < 0
                        ){
                            $(this).hide();
                        } else {
                            $(this).show();
                        }
                });
            });

        </script>

        {{parent()}}



