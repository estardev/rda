{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Richiesta list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Numeropratica</th>
                <th>Status</th>
                <th>Numeroprotocollo</th>
                <th>Idrichiesta</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('richiesta_show', { 'id': entity.idrichiesta }) }}">{{ entity.numeropratica }}</a></td>
                <td>{{ entity.status }}</td>
                <td>{{ entity.numeroprotocollo }}</td>
                <td>{{ entity.idrichiesta }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('richiesta_show', { 'id': entity.idrichiesta }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('richiesta_edit', { 'id': entity.idrichiesta }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('richiesta_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
