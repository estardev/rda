{% block body -%}

    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title pull-left">
                Lista Richieste
            </h4>

            <div class="form-group pull-right">
                <input id="searchRichiesta" class="form-control" placeholder="Cerca..." />
                <select id="selectRichiestaLavorazione" class="form-control">
                    <option disabled selected>Filtra Richieste:</option>
                    <option value="lavorate_0" type="text">In Lavorazione</option>
                    <option value="lavorate_1" type="text">Lavorate</option>
                </select>
            </div>
            <div class="clearfix"></div>
        </div>
        {#<div class="panel-body">Table qua</div>#}
        <table class="table" id="tableListaRichieste">
            <thead>
            <tr>
                <th>Id Pratica</th>
                <th>Titolo</th>
                <th>Status</th>
                <th>Anno programmazione</th>
                <th>Numero protocollo</th>
                <th>Azioni</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}

                <tr data-state="richiesta">
                    <td>{{ entity.id }}</td>
                    <td>{{ entity.titolo }}</td>
                    <td><button class="btn btn-primary" id="statoiter" data-id="{{ entity.id }}" ><span class="glyphicon glyphicon-list" aria-hidden="true"></span> {{ entity.status }} {% if(entity.statusgestav!="") %}  -  {{ entity.statusgestav }} {% endif %} </button></td>
                    <td>{{ entity.annoprogrammazione }}</td>
                    <td>{{ entity.numeroprotocollo }}</td>
                    <td>

                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-file" aria-hidden="true"></span><a target="_blank" href="{{ path('formtemplate_print', { 'idRichiesta': entity.id, 'idCategoria': entity.idcategoria }) }}"> Genera PDF</a></button>
                            <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><a href="{{ path('formtemplate_edit', { 'idRichiesta': entity.id ,'idCategoria': entity.idcategoria}) }}"> Modifica</a></button>
                            <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-book" aria-hidden="true"></span><a href="{{ path('documento_byCategoria', { 'idRichiesta': entity.id ,'idCategoria': entity.idcategoria}) }}"> Documenti</a></button>
                            <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-book" aria-hidden="true"></span><a href="{{ path('documento_liberoByRichiesta', { 'idRichiesta': entity.id ,'idCategoria': entity.idcategoria}) }}"> Allegati</a></button>
                        </div>

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="modal fade" id="iterModal" tabindex="-1" aria-hidden="true" role="dialog" aria php labelledby="myLargeModalLabel">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">

                    <button type="button" class="close" data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        <span class="sr-only">Chiudi</span>
                    </button>

                    <h4 id="numeropratica" class="modal-title"></h4>
                </div>

                <div class="modal-body">
                    <div class="modal-body">
                        <table class="table table-hover table-striped table-responsive" id="richiestamodel">
                        </table>
                </div>
            </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
        </div>
    </div>
        </div>



{% endblock %}