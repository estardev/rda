{% block body -%}

    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title pull-left">
                Lista Richieste
            </h4>

            <div class="form-group pull-right">
                <input id="searchRichiesta" class="form-control" placeholder="Cerca..." />
                <select id="selectRichiestaLavorazione" class="form-control">
                    <option disabled selected>Filtra Richieste:</option>
                    <option value="lavorate_0" type="text">In Lavorazione</option>
                    <option value="lavorate_1" type="text">Lavorate</option>
                </select>
            </div>
            <div class="clearfix"></div>
        </div>
        {#<div class="panel-body">Table qua</div>#}
        <table class="table" id="tableListaRichieste">
            <thead>
            <tr>
                <th>Id Pratica</th>
                <th>Titolo</th>
                <th>Status</th>
                <th>Numero protocollo</th>
                <th>Azioni</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}

                <tr data-state="richiesta">
                    <td>{{ entity.id }}</td>
                    <td>{{ entity.titolo }}</td>
                    <td>{{ entity.status }}</td>
                    <td>{{ entity.numeroprotocollo }}</td>
                    <td>

                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span><a target="_blank" href="{{ path('formtemplate_print', { 'idRichiesta': entity.id, 'idCategoria': entity.idcategoria }) }}">Genera PDF</a></button>
                            <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><a href="{{ path('formtemplate_edit', { 'idRichiesta': entity.id ,'idCategoria': entity.idcategoria}) }}"> Modifica</a></button>
                            <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><a href="{{ path('documento_byCategoria', { 'idRichiesta': entity.id ,'idCategoria': entity.idcategoria}) }}"> Documenti</a></button>
                        </div>

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}