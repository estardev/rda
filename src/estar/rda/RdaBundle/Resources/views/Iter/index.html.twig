{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Iter list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Dataora</th>
                <th>Dastato</th>
                <th>Astato</th>
                <th>Motivazione</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('iter_show', { 'id': entity.id }) }}">{{ entity.dataora |date('Y-m-d H:i:s') }}</a></td>
                <td>{{ entity.dastato }}</td>
                <td>{{ entity.astato }}</td>
                <td>{{ entity.motivazione }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('iter_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('iter_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('iter_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
