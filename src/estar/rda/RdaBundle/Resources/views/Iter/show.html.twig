{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Iter</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Dataora</th>
                <td>{{ entity.dataora|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Dastato</th>
                <td>{{ entity.dastato }}</td>
            </tr>
            <tr>
                <th>Astato</th>
                <td>{{ entity.astato }}</td>
            </tr>
            <tr>
                <th>Motivazione</th>
                <td>{{ entity.motivazione }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('iter') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('iter_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
