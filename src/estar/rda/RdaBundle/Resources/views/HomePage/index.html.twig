{% endblock %}

{% block body -%}


    <div class="panel panel-default">
        <div class="panel-heading"><h4>Richieste</h4></div>
        <table class="table">
            <thead>
            <tr>
                <th>Numero pratica</th>
                <th>Status</th>
                <th>Numero protocollo</th>
                <th>Id</th>
                <th>Azioni</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in richiesta %}
                <tr>
                    <td><a href="{{ path('richiesta_show', { 'id': entity.id }) }}">{{ entity.numeropratica }}</a></td>
                    <td>{{ entity.status }}</td>
                    <td>{{ entity.numeroprotocollo }}</td>
                    <td>{{ entity.id }}</td>
                    <td>

                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span><a href="{{ path('richiesta_show', { 'id': entity.id }) }}"> Visualizza</a></button>
                            <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><a href="{{ path('formtemplate_edit', { 'idRichiesta': entity.id ,'idCategoria': entity.idcategoria}) }}"> Modifica</a></button>

                        </div>


                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}





{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/homepage.js') }}"></script>
{% endblock %}